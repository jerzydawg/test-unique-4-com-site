---
/**
 * Centered Footer - Everything centered with stacked layout
 * Logo on top, links in middle, copyright at bottom
 */
import { getSiteName, getKeyword, getDomain, getDesignDNA } from '../../lib/site-config';
import { getContentVariations, getFooterVariations, getNavVariations } from '../../lib/city-content-variations';
import { getCTAVariation } from '../../lib/variations/shared/cta-variations';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const designDNA = getDesignDNA();
const content = getContentVariations(domain);
const footerContent = getFooterVariations(domain, keyword);
const navContent = getNavVariations(domain);

const keywordLower = keyword.toLowerCase();
const keywordDisplay = keywordLower.startsWith('my ') || keywordLower.startsWith('your ') || keywordLower.startsWith('a ') || keywordLower.startsWith('the ')
  ? keyword
  : `Your ${keyword}`;
---

<footer class="bg-slate-900 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-16 text-center">
    <!-- Brand -->
    <h3 class="text-4xl font-bold mb-2 text-white">{siteName}</h3>
    <p class="text-white mb-4 max-w-md mx-auto">
      {footerContent.ctaHeadline.replace('!', '')} through government assistance programs.
    </p>

    <!-- CTA -->
    <a href="/apply" class="no-underline inline-block font-bold py-3 px-8 rounded-full shadow-lg hover:scale-105 transition-all duration-200 mb-10" style={`background: ${designDNA.colors.accent}; color: white;`}>
      {getCTAVariation(domain, "footer")}
    </a>

    <!-- Links -->
    <div class="flex flex-wrap justify-center gap-6 mb-10">
      {navContent.navItems.map((item) => (
        <a href={item.href} class="text-slate-500 hover:text-white transition-colors">{item.label}</a>
      ))}
    </div>

    <!-- Trust Badges -->
    <div class="flex justify-center items-center flex-wrap gap-2 text-sm text-slate-500 mb-8" style={`color: ${designDNA.colors.text};`}>
      <span>{footerContent.trustBadgeSet[0]}</span>
      <span>•</span>
      <span>{footerContent.trustBadgeSet[1]}</span>
      <span>•</span>
      <span>{footerContent.trustBadgeSet[2]}</span>
    </div>

    <!-- Disclaimer -->
    <div class="mb-6" style={`color: ${designDNA.colors.text};`}>
      <p class="text-slate-600 text-xs max-w-3xl mx-auto">
        {footerContent.disclaimer}
      </p>
    </div>

    <!-- Copyright -->
    <div class="border-t border-slate-800 pt-8">
      <p class="text-slate-500 text-sm">
        {footerContent.copyright}
      </p>
    </div>
  </div>
</footer>


