import Layout from '../layouts/Layout.astro';
import { createClient } from '../lib/supabase';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import RelatedContent from '../components/RelatedContent.astro';
import { getSiteURL, getDomain, getDesignDNA } from '../lib/site-config';

const designDNA = getDesignDNA();

const SITE_URL = getSiteURL();
const DOMAIN = getDomain();

// SEO Meta Data
const title = "Free Government Phone Near Me | Find Local Providers 2025";
const description = "Find free government phone service near you. Locate local providers, check eligibility, and apply for Lifeline & ACP programs. Get your free phone today - no credit check required.";
const seoKeywords = "free government phone near me, government phone providers near me, free phone service locations, Lifeline providers near me, ACP providers near me, free phone application near me";
const canonicalURL = `${SITE_URL}/free-government-phone-near-me/`;

// Structured Data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Free Government Phone Service Near Me",
  "description": "Find local providers for free government phone service through Lifeline and ACP programs",
  "url": canonicalUrl,
  "provider": {
    "@type": "Organization",
    "name": DOMAIN,
    "url": SITE_URL
  },
  "areaServed": {
    "@type": "Country",
    "name": "United States"
  },
  "serviceType": "Free Government Phone Service",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Free government phone service for eligible individuals"
  }
};

// Initialize Supabase client
let supabase;
let states = [];
let providers = [];

try {
  const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
  const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
  
  if (supabaseUrl && supabaseKey) {
    supabase = createClient(supabaseUrl, supabaseKey);
    
    // Fetch states for location-based content
    const { data: statesData, error: statesError } = await supabase
      .from('states')
      .select('id, name, abbreviation')
      .order('name');
    
    if (!statesError && statesData) {
      states = statesData;
    }
    
    // Fetch providers for local service information
    const { data: providersData, error: providersError } = await supabase
      .from('providers')
      .select('id, name, coverage, contact_info')
      .limit(10);
    
    if (!providersError && providersData) {
      providers = providersData;
    }
  }
} catch (error) {
  console.error('Supabase connection error:', error);
}
