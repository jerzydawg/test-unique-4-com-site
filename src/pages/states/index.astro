  ]
};

const totalStates = Object.values(regionalStates).flat().length;
const totalCities = Object.values(regionalStates).flat().reduce((sum, s) => sum + s.cities, 0);

const title = "Free Government Phone by State | All 50 States + DC";
const description = `Find free government phone programs in all ${totalStates} US states. Browse ${totalCities.toLocaleString()}+ cities with Lifeline and ACP coverage.`;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Free Government Phone Programs by State",
  "description": description,
  "url": `${SITE_URL}/states/`,
  "numberOfItems": totalStates,
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": totalStates,
    "itemListElement": Object.values(regionalStates).flat().map((state, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": state.name,
      "url": `${SITE_URL}/${state.abbr.toLowerCase()}/`
    }))
  }
};

const breadcrumbData = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": `${SITE_URL}/`
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "All States",
      "item": `${SITE_URL}/states/`
    }
  ]
};

const regionColors: Record<string, string> = {
  'Northeast': `linear-gradient(135deg, ${designDNA.colors.primary}, ${designDNA.colors.secondary})`,
  'Southeast': 'linear-gradient(135deg, #10B981, #059669)',
  'Midwest': 'linear-gradient(135deg, #F59E0B, #D97706)',
  'Southwest': 'linear-gradient(135deg, #F97316, #EA580C)',
  'West': 'linear-gradient(135deg, #9333EA, #7E22CE)'
};

const regionIcons: Record<string, string> = {
  'Northeast': 'üèôÔ∏è',
  'Southeast': 'üå¥',
  'Midwest': 'üåæ',
  'Southwest': 'üèúÔ∏è',
  'West': 'üèîÔ∏è'
};
---

<Layout title={title} description={description} canonicalURL={canonicalURL}>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbData)} />
  
  <main class="min-h-screen bg-gray-50">
    <!-- Breadcrumbs -->
    <Breadcrumbs items={[
      { label: 'Home', href: '/' },
      { label: 'All States' }
    ]} />
    
    <!-- Hero Section -->
    <section style={`background: linear-gradient(135deg, ${designDNA.colors.primary}, ${designDNA.colors.secondary});`} class="text-white py-10">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-gray-900 text-4xl md:text-5xl font-bold mb-6 ">
            Free Government Phone Programs by State
          </h1>
          <p class="text-gray-900 text-xl md:text-2xl mb-8" style={`color: ${designDNA.colors.textOnPrimary}CC;`}>
            Browse all {totalStates} states with {totalCities.toLocaleString()}+ cities covered
          </p>

          <!-- CTA Above Fold -->
          <div class="mb-8 text-gray-900">
            <AboveFoldCTA context="states-index" />
          </div>

          <div class="flex flex-wrap justify-center gap-4">
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-6 py-3">
              <div class="text-3xl font-bold">{totalStates}</div>
              <div class="text-sm" style={`color: ${designDNA.colors.textOnPrimary}CC;`}>States</div>
            </div>
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-6 py-3">
              <div class="text-3xl font-bold">{totalCities.toLocaleString()}+</div>
              <div class="text-sm" style={`color: ${designDNA.colors.textOnPrimary}CC;`}>Cities Covered</div>
            </div>
            <div class="bg-white/20 backdrop-blur-sm rounded-lg px-6 py-3">
              <div class="text-3xl font-bold">100%</div>
              <div class="text-sm" style={`color: ${designDNA.colors.textOnPrimary}CC;`}>Free Service</div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Jump Navigation -->
    <section class="bg-white border-b sticky top-16 z-30">
      <div class="container mx-auto px-4 py-4">
        <div class="flex flex-wrap justify-center gap-2">
          {Object.keys(regionalStates).map((region) => (
            <a 
              href={`#${region.toLowerCase().replace(' ', '-')}`}
              style={`background: #F3F4F6;`} class="px-4 py-2 rounded-full text-sm font-medium text-gray-900 transition-colors" onmouseover={`this.style.background='${designDNA.colors.primary}25'; this.style.color='${designDNA.colors.primary}';`} onmouseout="this.style.background='#F3F4F6'; this.style.color='inherit';"
            >
              {regionIcons[region]} {region}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- States by Region -->
    <div class="container mx-auto px-4 py-8">
      {Object.entries(regionalStates).map(([region, states]) => (
        <section id={region.toLowerCase().replace(' ', '-')} class="mb-16 scroll-mt-32">
          <div class="flex items-center mb-8 text-gray-900">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center text-white text-2xl mr-4" style={region === 'Northeast' ? `background: linear-gradient(135deg, ${designDNA.colors.primary}, ${designDNA.colors.secondary});` : `background: linear-gradient(135deg, var(--tw-gradient-from), var(--tw-gradient-to));`}>
              {regionIcons[region]}
            </div>
            <div>
              <h2 class="text-gray-900 text-3xl font-bold ">{region}</h2>
              <p class="text-gray-900">{states.length} states ‚Ä¢ {states.reduce((sum, s) => sum + s.cities, 0).toLocaleString()} cities</p>
            </div>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
            {states.map((state) => (
              <a 
                href={`/${state.abbr.toLowerCase()}/`}
                style={`border-color: #E5E7EB;`} class="group block bg-white rounded-xl p-5 shadow-sm hover:shadow-lg transition-all duration-300 border" onmouseover={`this.style.borderColor='${designDNA.colors.primary}80';`} onmouseout="this.style.borderColor='#E5E7EB';"
              >
                <div class="flex items-start justify-between mb-3 text-gray-900">
                  <div class={`w-12 h-12 rounded-lg bg-gradient-to-r ${regionColors[region]} flex items-center justify-center text-white font-bold text-lg group-hover:scale-110 transition-transform`}>
                    {state.abbr}
                  </div>
                  <svg class="w-5 h-5 text-gray-900 transition-colors" style={`color: inherit;`} onmouseover={`this.style.color='${designDNA.colors.primary}';`} onmouseout="this.style.color='inherit';" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
                <h3 class="text-gray-900 font-semibold transition-colors mb-1" style={`color: inherit;`} onmouseover={`this.style.color='${designDNA.colors.primary}';`} onmouseout="this.style.color='inherit';">
                  {state.name}
                </h3>
                <p class="text-gray-900 text-sm ">
                  {state.cities.toLocaleString()} cities
                </p>
              </a>
            ))}
          </div>
        </section>
      ))}
    </div>

    <!-- CTA Section -->
    <section style={`background: linear-gradient(135deg, ${designDNA.colors.primary}, ${designDNA.colors.secondary});`} class="text-white py-10">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-gray-900 text-3xl font-bold mb-6 ">Ready to Get Your Free Government Phone?</h2>
        <p class="text-gray-900 text-xl mb-8 max-w-2xl mx-auto" style={`color: ${designDNA.colors.textOnPrimary}CC;`}>
          Government phone programs are available in all 50 states. Check your eligibility today!
        </p>
        <div class="flex justify-center">
          <a href="/apply" class="block md:inline-block w-full md:w-auto max-w-md md:max-w-none mx-auto py-4 px-10 text-lg font-bold rounded-xl shadow-lg hover:shadow-2xl transform hover:scale-105 active:scale-95 transition-all duration-300" style={`background: linear-gradient(135deg, ${designDNA.colors.accent} 0%, ${designDNA.colors.accentDark || designDNA.colors.accent} 100%); color: white;`}>
            Apply Now
          </a>
        </div>
      </div>
    </section>

    <!-- Related Content Section -->
    <RelatedContent currentPage="home" />
    
    <!-- Additional Internal Links -->
    <section class="py-10 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-gray-900 text-2xl font-bold text-center mb-6">Quick Links</h2>
        <div class="grid md:grid-cols-4 gap-4 max-w-5xl mx-auto">
          <a href="/programs" class="bg-gray-50 rounded-lg shadow-md p-4 hover:shadow-lg transition text-center">
            <h3 class="text-gray-900 font-semibold mb-2">All Programs</h3>
            <p class="text-gray-900 text-sm">Lifeline & ACP</p>
          </a>
          <a href="/eligibility" class="bg-gray-50 rounded-lg shadow-md p-4 hover:shadow-lg transition text-center">
            <h3 class="text-gray-900 font-semibold mb-2">Check Eligibility</h3>
            <p class="text-gray-900 text-sm">See if you qualify</p>
          </a>
          <a href="/providers" class="bg-gray-50 rounded-lg shadow-md p-4 hover:shadow-lg transition text-center">
            <h3 class="text-gray-900 font-semibold mb-2">Find Providers</h3>
            <p class="text-gray-900 text-sm">Compare options</p>
          </a>
          <a href="/faq" class="bg-gray-50 rounded-lg shadow-md p-4 hover:shadow-lg transition text-center">
            <h3 class="text-gray-900 font-semibold mb-2">FAQ</h3>
            <p class="text-gray-900 text-sm">Common questions</p>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

